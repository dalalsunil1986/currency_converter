    <div class="row-fluid title-holder">
            <h1>Currency Converter</h1>
            <p>A simple, straightforward way to convert currency values.</p>
    </div>
   <div class="hero-block" ng-controller="page_controller" ng-init="init()">
       <img src="{{ asset('bundles/currencyconvertercurrencyconverter/img/go.png') }}" class="mb-7 hero-image">
       
       <form name = "currency_converter_form" ng-submit="convert()">
        
         <div class="row-fluid">
             <div class="span4 left">
                 <div ng-show="currency_code_input.currency_code != undefined && currency_code_input.currency_code != ''" class="flag-holder">
                     <img width="50" height="30" src="{%raw%}{{ getFlag(currency_code_input.currency_code) }}{%endraw%}" />
                 </div>
                 <select data-placeholder="Select input currency:" tabindex="2" ng-model="currency_code_input" ng-options="item.currency_info for item in currencies" name="currency_code_input" class="convert-from chosen-select" chosen="currencies" required>
                 </select>
             </div>
             <div class="span4 right">
                 <div ng-show="currency_code_output.currency_code != undefined && currency_code_output.currency_code != ''" class="flag-holder">
                     <img  src="{%raw%}{{ getFlag(currency_code_output.currency_code) }}{%endraw%}" width="50" height="30" />
                 </div>
                 <select data-placeholder="Select output currency:" tabindex="2" ng-options="item.currency_info for item in currencies" ng-model="currency_code_output" name="currency_code_to" class="convert-to chosen-select" chosen="currencies" required>
                 </select>
             </div>
         </div>
           
         <div class="textbox-holder row-fluid">
             <div class="col-lg-3">
                 <div class="input-group">
                     <input type="text" class="form-control" ng-model="amount" placeholder="Enter amount to convert....." name="amount_to_convert" amount-convert required>
                     <span class="input-group-btn">
                        <button class="btn btn-danger" type="submit" >Convert</button>
                     </span>
                 </div>
             </div>
         </div>
          
	   <!--error holder for forms-->
	   <div class="error-holder row-fluid">
                <div class="span3"  ng-show="currency_converter_form.$dirty">  
                    <div class="alert alert-danger error" ng-show="currency_converter_form.amount_to_convert.$invalid && !currency_converter_form.currency_code_input.$error.required && !currency_converter_form.currency_code_to.$error.required">
                            Please enter a valid amount.
                    </div>
                    <div class="alert alert-danger error" ng-show="currency_converter_form.currency_code_input.$error.required">
                            Please select input currency.
                    </div>
                     <div class="alert alert-danger error" ng-show="currency_converter_form.currency_code_to.$error.required && !currency_converter_form.currency_code_input.$error.required">
                            Please select output currency.
                    </div>
                </div> 
          </div>
          <!--error holder for forms-->
	  
       </form>
       
       
        <!--error holder for ajax request-->
        <div ng-show="resultMessage != null" class="error-holder row-fluid">                                                   
               <div class="text span" ng-repeat="item in resultMessage">                                                          
                    <div class="span3" ng-switch on = "resultMessage.type">  
                        <div class="alert alert-success success" ng-switch-when = "success">  
                            <a class="close" data-dismiss="alert">×</a>  
                            {%raw%}{{ item.responseMsg }}{%endraw%}
                        </div> 
                       <div class="alert alert-danger error" ng-switch-when = "error">  
                            <a class="close" data-dismiss="alert">×</a>  
                            {%raw%}{{ item.responseMsg }}{%endraw%}
                       </div> 
                    </div>
               </div>
        </div>
       <!--error holder for ajax request-->
       
        <!--the indicator for ajax process-->
        <div id="loading-indicator"></div>
        <!--the indicator for ajax process-->
         
    </div>
    <a href="index.html#work" class="scroll"><span class="down-arrow"></span></a>

